<!-- Includes Header -->
<%- include('includes/_header')%>
<!-- Includes Header -->

<!-- Main Site -->
<main id="site-main">
      <div class="container">
        <div class="box-nav d-flex justify-between text-center">
          <div class="filter">
              <a href="/todoPage"><i class="fas fa-angle-double-left"></i>All Users</a>
          </div>
        </div>

        <div class="form-title text-center">
             <h2 class="text-dark">Update User</h2>
             <span class="text-light">Use the below form to update the user account</span>
        </div>
       
        <!-- Includes update user form -->
          <!-- Form handling -->
  <form method="PUT" id="update_user">
      <div class="new_user">
            <div class="form-group">
                  <label for="name" class="text-light">Name</label>
                  <input type="hidden" name="id" id="userId" value="<%= todo.id %>">
                  <input type="text" name="name" value="<%= todo.name %>" placeholder="Name">
            </div>
            <div class="form-group">
                  <label for="email" class="text-light">Place</label>
                  <input type="text" name="place" value="<%= todo.place %>" placeholder="Place">
            </div>
            <div class="form-group">
                  <label for="completed" class="text-light">Phone</label>
                  <input type="text" name="phone" value="<%= todo.phone %>" placeholder="Phone">
            </div>
           
            <div class="form-group">
                  <button type="submit" class="btn text-dark update">Update</button>
            </div>
      </div>
 </form>
 <!-- Form handling -->
      </div>  
  </main>
<!-- Main Site -->



<!-- Includes Footer -->
<%- include('includes/_footer')%>
